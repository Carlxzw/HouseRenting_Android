<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_10"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/tv_appointment_name"
            android:layout_weight="1"
            android:text="预约人"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_appointment_state"
            android:layout_gravity="center"
            android:text="预约状态"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_appointment_phone"
            android:layout_weight="1"
            android:text="联系电话"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tv_appointment_time"
            android:text="预约时间"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_appointment_address"
        android:layout_marginTop="@dimen/dp_6"
        android:singleLine="true"
        android:text="预约地址"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:id="@+id/ll_action"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btn_add_comment"
            android:visibility="gone"
            android:elevation="2dp"
            android:background="@drawable/background_circle"
            android:layout_margin="@dimen/dp_4"
            android:text="填写评价"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:elevation="2dp"
            android:id="@+id/btn_add_contract"
            android:background="@drawable/background_circle_blue"
            android:layout_margin="@dimen/dp_4"
            android:textColor="@android:color/white"
            android:text="上传合同"/>

    </LinearLayout>
</LinearLayout>